.MACRO MIDI_play

	mov a,!offset+(2*\1)
	cmp a,!ticks
	beq +
		ret
	+:
	
	mov a,!offset+1+(2*\1)
	cmp a,!ticks+1
	beq +
		ret
	+:
	
	mov a,#1
	mov !mode+\1,a

	mov y,!volume+\1
	;mov y,#$40
	
	mov a,#VOLL+($10*\1)
	movw REG_ADD,YA
	
	mov a,#VOLR+($10*\1)
	movw REG_ADD,YA
	
	
	mov a,!pitch+\1
	mov !tpitch,a
	call !plsr
	
	mov y,!tmp+1
	mov a,#RH+($10*\1)
	movw REG_ADD,YA
	
	
	
	mov y,!tmp
	mov a,#RL+($10*\1)
	movw REG_ADD,YA
.ENDM

plsr:

	mov a,!tpitch
	and a,#$0F
	mov !tmp,a
	
	mov a,!tpitch
	and a,#$F0
	lsr a
	lsr a
	lsr a
	lsr a
	
	mov !tmp+1,a
	;0 $10
	cmp a,#$00
	bne +
		mov a,#$10
		clrc
		adc a,!tmp
		mov !tmp,a
		
		mov a,#$00
		mov !tmp+1,a
		ret
