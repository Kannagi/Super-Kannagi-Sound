.MACRO MIDI_playend

	mov a,!offset+(2*\1)
	cmp a,!ticks
	beq +
		ret
	+:
	
	mov a,!offset+1+(2*\1)
	cmp a,!ticks+1
	beq +
		ret
	+:
	
	mov a,#0
	mov !mode+\1,a
	
	
	

	
	WDSP VOLL+($10*\1),$00
	WDSP VOLR+($10*\1),$00
		/*
	WDSP RL+($10*\1),0
	WDSP RH+($10*\1),0
	*/


	mov a,!lecture+(2*\1)
	clrc
	adc	a,!poffset+\1
	mov !lecture+(2*\1),a
	
	mov a,!lecture+1+(2*\1)
	adc	a,#0
	mov !lecture+(2*\1)+1,a
	
	
.ENDM

	
playsongend:

	mov a,!toffset
	cmp a,#0
	bne +
		jmp !playsongendc0
	+:
	cmp a,#1
	bne +
		jmp !playsongendc1
	+:
	cmp a,#2
